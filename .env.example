# Environment Variables for Natural Language Metrics Agent
# Copy this file to .env and fill in the required values

# Grafana MCP Server Configuration
MCP_GRAFANA_HOST=localhost
MCP_GRAFANA_PORT=8000

# LLM Configuration
# Options: "openai" or "ollama"
LLM_SOURCE=openai

# OpenAI Configuration (required if LLM_SOURCE=openai)
OPENAI_API_KEY=sk-your-api-key-here

# Ollama Configuration (required if LLM_SOURCE=ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Gradio Server Configuration
GRADIO_SERVER_PORT=7860
